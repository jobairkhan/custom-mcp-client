# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# MCP Servers Configuration
# JSON array of server configurations
# Each server should have: name, type (stdio/http), and connection details
# Example for stdio servers:
MCP_SERVERS=[{"name":"jira","type":"stdio","command":"npx","args":["-y","@modelcontextprotocol/server-jira"]},{"name":"github","type":"stdio","command":"npx","args":["-y","@modelcontextprotocol/server-github"]}]

# GitHub Configuration (placeholders)
GITHUB_ORG=your-org
GITHUB_ASSIGNEE=your-username
GITHUB_TOKEN=your-github-token

# Jira Configuration (placeholders)
JIRA_URL=https://your-instance.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Agent Configuration
MAX_ITERATIONS=15
LOG_LEVEL=INFO
